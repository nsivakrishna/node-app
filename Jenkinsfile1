pipeline {
    agent any
    environment{
        DOCKER_TAG1 = getDockerTag()
    }
    stages {
        stage('Build Docker Image') {
            steps{
                sh "${DOCKER_TAG1}"
                sh "docker build . -t kammana/nodeapp"
            }
        } 
    }
}

def getDockerTag(){
        def tag = sh script: 'git rev-parse HEAD', retirnStdout: true
        return tag

}
